<?xml version="1.0" encoding="UTF-8" ?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/ll_Dialog_SetLearnWord"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical">
<TextView
android:layout_width="match_parent"
android:id = "@+id/tvorder_Dialog_SetLearnWord"
android:layout_height="50dp"
android:textColor="@color/material_deep_teal_500"
android:padding="10dp"
android:text ="@string/Order_Dialog_SetLearnWord"
android:textAppearance="?android:attr/textAppearanceMedium">       
</TextView>
<LinearLayout
android:layout_width="match_parent"
android:layout_height="50dp"
android:orientation="horizontal">
<RadioGroup
android:orientation="horizontal"
android:layout_width="match_parent"
android:layout_height="50dp"
android:layout_weight="1"
android:id="@+id/rdogSelectOrder_Dialog_SetLearnWord">
<RadioButton
android:layout_width="0dp"
android:layout_height="match_parent"
android:checked="true"
android:layout_weight="1"
android:text="@string/Asc_Dialog_SetLearnWord"
android:id="@+id/rdoAscendant" />
<RadioButton
android:layout_width="0dp"
android:layout_height="match_parent"
android:layout_weight="1"
android:text="@string/Desc_Dialog_SetLearnWord"
android:id="@+id/rdoDescendant" />
<RadioButton
android:layout_width="0dp"
android:layout_height="match_parent"
android:text="@string/Random_Dialog_SetLearnWord"
android:layout_weight="1"
android:id="@+id/rdoRandomize" />
</RadioGroup>
</LinearLayout>
<TextView
android:layout_width="match_parent"
android:id = "@+id/tvChooseTag_Dialog_SetLearnWord"
android:layout_height="50dp"
android:text = "@string/ChooseTag_Dialog_SetLearnWord"
android:padding="10dp"
android:textColor="@color/material_deep_teal_500"
android:textAppearance="?android:attr/textAppearanceMedium">       
</TextView>
<ListView
android:layout_height="100dp"
android:id="@+id/lvTagList_Dialog_SetLearnWord"
android:layout_width="match_parent"/>
</LinearLayout>