<?xml version="1.0" encoding="UTF-8" ?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent">
<LinearLayout
android:orientation="horizontal"
android:layout_width="match_parent"
android:layout_height="144dp">
<RelativeLayout
android:layout_height="match_parent"
android:layout_width="0dp"
android:layout_weight="1">
<ImageView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_centerInParent="true"
android:background="#00000000"
android:id="@+id/ivDialog_CreateNewTag" />  
</RelativeLayout>
<LinearLayout
android:orientation="vertical"
android:layout_width="0dp"
android:layout_height="match_parent"
android:layout_weight="4">
<SeekBar
android:id="@+id/Sb_Red_Dialog_CreateNewTag"
android:layout_width="match_parent"
android:layout_height="0dp"
android:layout_weight="1"
android:max="255"
android:progress="150" />
<SeekBar
android:id="@+id/Sb_Green_Dialog_CreateNewTag"
android:layout_width="match_parent"
android:layout_height="0dp"
android:layout_weight="1"
android:max="255"
android:progress="150" />   
<SeekBar
android:id="@+id/Sb_Blue_Dialog_CreateNewTag"
android:layout_width="match_parent"
android:layout_height="0dp"
android:layout_weight="1"
android:max="255"
android:progress="150" />   
</LinearLayout>
</LinearLayout>
    <RadioGroup
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rdogSelectshape">
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:checked="true"
            android:layout_weight="1"
            android:text="@string/square_Dialog_CreateNewTag"
            android:id="@+id/rdorect" />
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/star_Dialog_CreateNewTag"
            android:id="@+id/rdostar" />
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/heart_Dialog_CreateNewTag"
            android:layout_weight="1"
            android:id="@+id/rdoheart" />
    </RadioGroup>
<android.support.design.widget.TextInputLayout
android:id="@+id/_tlnMeaning_Dialog_EditCreateNewTag"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_above="@+id/_llPlain_Dialog_CreateNewTag"
android:gravity="bottom">
<android.support.design.widget.TextInputEditText
android:layout_width="match_parent"
android:layout_height="48dp"
android:hint="@string/TagMeaning_Dialog_CreateNewTag"
android:id="@+id/etxtMeaning_Dialog_CreateNewTag"
android:scrollbars="vertical"/>
</android.support.design.widget.TextInputLayout>
</LinearLayout>